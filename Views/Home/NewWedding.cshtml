@{
    ViewData["Title"] = "Wedding Planner";
}
@model WeddingPlannerRedo.Models.WeddingPlan
<div class="Dnavheader">
    <h3 class="navheaderh1">Wedding Planner </h2>
    <a class="float-right" href="http://127.0.0.1:5000/logout">Logout</a>
    <a class="float-right" href="http://127.0.0.1:5000/dashboard">Dashboard</a> 
</div>

    <div class="Register">
        <div class="card">
            <div class="card-header">
                <h3>Plan Your Wedding!</h3>
            </div>

            <div class="card-body">
                <form action="create-wedding" method="post">
                    <div class="form-group">
                        <span class="alert-danger" asp-validation-for="WedderOne"></span><br>
                        <label asp-for="WedderOne"></label>
                        <input asp-for="WedderOne" type="text"  class="form-control" placeholder="Enter Name">

                        <span class="alert-danger" asp-validation-for="WedderTwo"></span><br>
                        <label asp-for="WedderTwo"></label>
                        <input asp-for="WedderTwo" type="text"  class="form-control" placeholder="Enter Name">

                        <span class="alert-danger" asp-validation-for="WeddingDate"></span><br>
                        <label asp-for="WeddingDate"></label>
                        <input asp-for="WeddingDate" type="date" min="2019-2-15" class="form-control" >

                        <span class="alert-danger" asp-validation-for="WeddingAddress"></span><br>
                        <label asp-for="WeddingAddress"></label>
                        <input asp-for="WeddingAddress" type="address"  class="form-control" placeholder="Enter Address">

                        <input type="hidden" asp-for="CreatorId" value=" @ViewBag.CurrentUser ">

                    </div>

                    <button class="btn btn-pill btn-block btn-primary active" type="submit">Create Wedding</button>
                </form>
            </div>
        </div>
    </div>